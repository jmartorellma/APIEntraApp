@model ResetPasswordViewModel

<!doctype html>
<html lang="es">
<head>
    <title>Entra</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="x-ua-compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="format-detection" content="telephone=no">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500&display=swap" rel="stylesheet">

    <style type="text/css">
        body, html {
            width: 100%;
            height: 100%;
            margin: 0 !important;
            padding: 0 !important;
            font-family: 'Roboto', sans-serif;
        }

        body {
            display: flex;
            flex-direction: column;
            justify-content: start;
            align-items: stretch;
        }

        header,
        .title-container {
            background-color: #424242;
            color: #8bc34a;
        }

        h1, h3 {
            margin: 0;
            padding: 0.67em;
            font-weight: 400;
        }

        main {
            display: flex;
            flex-direction: column;
            justify-content: start;
            align-items: stretch;
            flex-grow: 1;
        }

        .main-container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            flex-grow: 1;
        }

        .form-container {
            display: flex;
            flex-direction: column;
            justify-content: start;
            align-items: stretch;
            border-radius: 5px;
            border: 1px solid lightgrey;
            width: 300px;
            height: 300px;
        }

        .title-container {
            border-top-left-radius: 5px;
            border-top-right-radius: 5px;
        }

        form {
            padding: 0.67em;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            align-items: stretch;
            flex-grow: 1;
        }

        .input-group {
            display: flex;
            flex-direction: column;
            justify-content: space-around;
            align-items: stretch;
            flex-grow: 1;
        }

        .input-container {
            display: flex;
            flex-direction: column;
            justify-content: start;
            align-items: stretch;
        }

        label {
            font-size: 11px;
            color: #8bc34a;
        }

        .input-password {
            border: none;
            border-bottom: 1px solid lightgrey;
            margin-top: 10px;
        }

            .input-password:focus {
                outline: none;
            }

        .button-container {
            height: 50px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: stretch;
        }

        .btn {
            height: 25px;
            background-color: #8bc34a;
            color: white;
            cursor: pointer;
            border: 1px #8bc34a solid;
            border-radius: 5px;
        }

            .btn:hover {
                background-color: white;
                color: #8bc34a;
            }
    </style>
</head>
<body>
    <header>
        <h1>ENTRA App - Restablecer Contaseña</h1>
    </header>
    <main>
        <div class="main-container">
            <div class="form-container">
                <div class="title-container">
                    <h3>Nueva Contraseña</h3>
                </div>
                <form asp-contrrolloller="Auth" asp-action="ResetPassword" method="post">
                    <div class="input-group">
                        <div class="input-container">
                            <label asp-for="Password">Contraseña*</label>
                            <input asp-for="Password" class="input-password" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="input-container">
                            <label asp-for="ConfirmPassword">Confirmar Contraseña*</label>
                            <input asp-for="ConfirmPassword" class="input-password" required />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="button-container">
                        <input type="hidden" asp-for="Email" />
                        <input type="hidden" asp-for="Token" />
                        <input type="submit" value="Enviar" class="btn" />
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                </form>
            </div>
        </div>
    </main>
</body>
</html>
